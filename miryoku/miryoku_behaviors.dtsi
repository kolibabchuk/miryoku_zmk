U_MACRO(m_rbkt_lgui, bindings = <&u_mt LGUI RBKT>;)
U_MACRO(m_esc, bindings = <&kp ESC>;)
U_MACRO(m_lbkt_rgui, bindings = <&u_mt RGUI LBKT>;)
U_MACRO(m_bslh_lshift, bindings = <&u_mt LSHFT BSLH>;)
U_MACRO(m_caps, bindings = <&kp CAPS>;)
U_MACRO(m_sqt_rshift, bindings = <&u_mt RSHFT SQT>;)
U_MACRO(m_fslh_lalt, bindings = <&u_mt LALT FSLH>;)
U_MACRO(m_qmark, bindings = <&kp QMARK>;)
U_MACRO(m_minus_ralt, bindings = <&u_mt RALT MINUS>;)
U_MACRO(m_excl, bindings = <&kp EXCL>;)

/ {
  behaviors {
    u_mt: u_mt {
      compatible = "zmk,behavior-hold-tap";
      #binding-cells = <2>;
      tapping-term-ms = <U_TAPPING_TERM>;
      flavor = "tap-preferred";
      bindings = <&kp>, <&kp>;
    };
    u_lt: u_lt {
      compatible = "zmk,behavior-hold-tap";
      #binding-cells = <2>;
      tapping-term-ms = <U_TAPPING_TERM>;
      flavor = "tap-preferred";
      bindings = <&mo>, <&kp>;
    };
    td_rbkt_esc: td_rbkt_esc {
      compatible = "zmk,behavior-tap-dance";
      #binding-cells = <0>;
      tapping-term-ms = <200>;
      bindings = <&m_rbkt_lgui>, <&m_esc>;
    };
    td_lbkt_esc: td_lbkt_esc {
      compatible = "zmk,behavior-tap-dance";
      #binding-cells = <0>;
      tapping-term-ms = <200>;
      bindings = <&m_lbkt_rgui>, <&m_esc>;
    };
    td_bslh_caps: td_bslh_caps {
      compatible = "zmk,behavior-tap-dance";
      #binding-cells = <0>;
      tapping-term-ms = <200>;
      bindings = <&m_bslh_lshift>, <&m_caps>;
    };
    td_sqt_caps: td_sqt_caps {
      compatible = "zmk,behavior-tap-dance";
      #binding-cells = <0>;
      tapping-term-ms = <200>;
      bindings = <&m_sqt_rshift>, <&m_caps>;
    };
    td_fslh_qmark: td_fslh_qmark {
      compatible = "zmk,behavior-tap-dance";
      #binding-cells = <0>;
      tapping-term-ms = <200>;
      bindings = <&m_fslh_lalt>, <&m_qmark>;
    };
    td_minus_excl: td_minus_excl {
      compatible = "zmk,behavior-tap-dance";
      #binding-cells = <0>;
      tapping-term-ms = <200>;
      bindings = <&m_minus_ralt>, <&m_excl>;
    };
  };
};
