/ {
  behaviors {
    u_mt: u_mt {
      compatible = "zmk,behavior-hold-tap";
      #binding-cells = <2>;
      tapping-term-ms = <U_TAPPING_TERM>;
      flavor = "tap-preferred";
      bindings = <&kp>, <&kp>;
    };
    u_lt: u_lt {
      compatible = "zmk,behavior-hold-tap";
      #binding-cells = <2>;
      tapping-term-ms = <U_TAPPING_TERM>;
      flavor = "tap-preferred";
      bindings = <&mo>, <&kp>;
    };
    td_rbkt_esc: td_rbkt_esc {
      compatible = "zmk,behavior-tap-dance";
      #binding-cells = <0>;
      tapping-term-ms = <200>;
      bindings = <&u_mt LGUI BSLH>, <&kp ESC>;
    };
    td_lbkt_esc: td_lbkt_esc {
      compatible = "zmk,behavior-tap-dance";
      #binding-cells = <0>;
      tapping-term-ms = <200>;
      bindings = <&u_mt RGUI LBKT>, <&kp ESC>;
    };
    td_bslh_caps: td_bslh_caps {
      compatible = "zmk,behavior-tap-dance";
      #binding-cells = <0>;
      tapping-term-ms = <200>;
      bindings = <&u_mt LSHFT RBKT>, <&kp CAPS>;
    };
    td_sqt_caps: td_sqt_caps {
      compatible = "zmk,behavior-tap-dance";
      #binding-cells = <0>;
      tapping-term-ms = <200>;
      bindings = <&u_mt RSHFT SQT>, <&kp CAPS>;
    };
    td_fslh_qmark: td_fslh_qmark {
      compatible = "zmk,behavior-tap-dance";
      #binding-cells = <0>;
      tapping-term-ms = <200>;
      bindings = <&u_mt LALT FSLH>, <&kp QMARK>;
    };
    td_minus_excl: td_minus_excl {
      compatible = "zmk,behavior-tap-dance";
      #binding-cells = <0>;
      tapping-term-ms = <200>;
      bindings = <&u_mt RALT MINUS>, <&kp EXCL>;
    };
  };
};
